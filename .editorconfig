# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# JetBrains IDE Configuration:
# To match these settings in JetBrains IDEs, configure:
# - Editor > Code Style > General > Hard wrap at = 150
# - Editor > Code Style > General > Visual guides = 150

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 150

# Markdown files
[*.md]
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 4

# Package files
[package.json]
indent_size = 4

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 4
quote_type = single

# Configuration files
[.{prettierrc,eslintrc,babelrc}]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Shell scripts
[*.sh]
end_of_line = lf