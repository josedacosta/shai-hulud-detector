{
    "name": "shai-hulud-detector",
    "version": "1.1.0",
    "description": "CLI script to detect Shai-Hulud compromise indicators in npm projects",
    "main": "dist/cli/index.js",
    "bin": {
        "shai-hulud-detector": "./dist/cli/index.js"
    },
    "scripts": {
        "// Development": "",
        "dev": "ts-node src/cli/index.ts",
        "dev:watch": "nodemon --exec ts-node src/cli/index.ts",
        "dev:debug": "node --inspect -r ts-node/register src/cli/index.ts",
        "// Build & Distribution": "",
        "build": "tsc",
        "build:clean": "rimraf dist && yarn build",
        "build:watch": "tsc --watch",
        "prebuild": "rimraf dist",
        "postbuild": "chmod +x dist/cli/index.js",
        "// Runtime": "",
        "start": "node dist/cli/index.js",
        "start:interactive": "node dist/cli/index.js",
        "start:scan": "node dist/cli/index.js -d .",
        "start:verbose": "node dist/cli/index.js -v",
        "start:json": "node dist/cli/index.js --json",
        "// Quality Assurance": "",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --watchAll=false",
        "test:clear": "jest --clearCache",
        "// Linting & Formatting": "",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "lint:check": "eslint src --ext .ts --max-warnings 0",
        "typecheck": "tsc --noEmit",
        "typecheck:watch": "tsc --noEmit --watch",
        "// Package Management": "",
        "install:clean": "rimraf node_modules yarn.lock && yarn install",
        "deps:check": "yarn outdated",
        "deps:update": "yarn upgrade-interactive --latest",
        "deps:audit": "yarn audit",
        "deps:audit:fix": "yarn audit --fix",
        "// Security & Analysis": "",
        "security:audit": "yarn audit && yarn outdated",
        "security:check": "yarn audit --level moderate",
        "analyze:bundle": "yarn build && du -sh dist/*",
        "analyze:deps": "yarn list --depth=0",
        "// CLI Development": "",
        "cli:help": "yarn start --help",
        "cli:version": "yarn start --version",
        "cli:test:basic": "yarn start -d ./test-projects",
        "cli:test:verbose": "yarn start -d ./test-projects -v --json",
        "// Maintenance": "",
        "clean": "rimraf dist coverage node_modules/.cache",
        "clean:all": "rimraf dist coverage node_modules yarn.lock",
        "reset": "yarn clean:all && yarn install",
        "verify": "yarn typecheck && yarn lint:check && yarn test:ci && yarn build",
        "// Release & Publishing": "",
        "preversion": "yarn verify",
        "version": "yarn build",
        "postversion": "git push && git push --tags",
        "prepublishOnly": "yarn verify"
    },
    "keywords": [
        "shai-hulud",
        "shai-hulud-detector",
        "shai-hulud-attack",
        "npm-security",
        "supply-chain-attack",
        "malware-detection",
        "compromise-detection",
        "self-replicating-worm",
        "crypto-stealer",
        "github-actions-malware",
        "bundle.js-detection",
        "truffleHog-abuse",
        "cli-security-tool",
        "defensive-security",
        "package-scanner",
        "vulnerability-detection",
        "npm-audit",
        "security-analysis",
        "threat-hunting",
        "malicious-packages"
    ],
    "author": "josedacosta <contact@josedacosta.info>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/josedacosta/shai-hulud-detector.git"
    },
    "homepage": "https://github.com/josedacosta/shai-hulud-detector#readme",
    "bugs": {
        "url": "https://github.com/josedacosta/shai-hulud-detector/issues"
    },
    "dependencies": {
        "boxen": "^5.1.2",
        "chalk": "^4.1.2",
        "cli-progress": "^3.12.0",
        "cli-table3": "^0.6.3",
        "commander": "^11.1.0",
        "figlet": "1.7.0",
        "gradient-string": "^2.0.2",
        "inquirer": "^8.2.6",
        "ora": "^5.4.1"
    },
    "devDependencies": {
        "@types/figlet": "^1.5.8",
        "@types/gradient-string": "^1.1.5",
        "@types/inquirer": "^9.0.7",
        "@types/jest": "^29.5.8",
        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0",
        "eslint": "^8.54.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.4.3",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
